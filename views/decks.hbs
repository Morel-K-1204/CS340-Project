[ <a href="/">Home</a> | <a href="/players">Players</a> | <a href="/matches">Matches</a> | <a href="/decks">Decks</a> | <a href="/cards">Cards</a> | <a href="/deck_cards">Deck_Cards</a> ]

<div id="browse">
<!-- Make this a button?-->
<p><a href="#" onClick="newDeck()">New Deck</a></p>
<table border="1" cellpadding="5" id="deck-table">
    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
			<th>Delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id and username --}}
        {{#each data}}
        <tr data-value={{this.DeckID}}>
            <td>{{this.DeckID}}</td>
            <td>{{this.Player_Username}}</td>
			<td><button onclick="deleteDeck({{this.DeckID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_deck.js"></script>
<p>&nbsp;</p>
</div> <!-- browse -->

<div id="insert">
    <form method="POST" id="addDeck" action="/add-deck">
      <p></p>
        <legend><strong>Add Deck</strong></legend>
          <fieldset class="fields">
            <label> Player ID </label> <select name="PlayerID" id="player-input">
            	<option value="" selected>Select a player...</option>
              {{#each players}}
              <option value="{{this.PlayerID}}">{{this.PlayerID}} - {{this.Username}}</option>
              {{/each}}  
            </select>
      </fieldset>
          <input class="btn" type="submit" id="addDeck" value="Add Deck">
          <input class="btn" type="button" value="cancel" onClick="browseDecks()">
	</form> 
</div><!-- insert -->